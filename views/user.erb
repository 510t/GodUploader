<script type="text/javascript" src="<%= uri( '/js/user.js',false ) %>"></script>
<div class="container">

  <div class="jumbotron">
    <div class="row">
      <p class="text-center"><%= @user.name %>の神絵置場</p>
    </div>
    <div class="row">
      <!-- モーダルウィンドウを呼び出すボタン -->
      <% if @user.kmcid == kmcid then %>
        <button type="button" class="btn btn-primary pull-right " data-toggle="modal" data-target="#editModal">情報の編集</button>
      <% end %> 
    </div>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading" >
      <p>神絵たち</p>
    </div>
    <div class="panel-body">
      <div class="row"> 
        <% @user.illusts.order( "created_at DESC" ).each do |i| %>
          <div class="col-md-3 thumb">
              <a href="<%= uri("./illust/"+i.id.to_s ,false) %>" class="thumbnail">
                <% if ishide(i) then %>
                  検閲によりサムネイル表示なし
                <% else %>
                  <img width="" height="100"  src="<%= uri( "./illusts/" + i.filename , false ) %>"  >
                <% end %>
              <div class="caption">
                <h2><%= i.title  %></h2>
                <p><%= i.caption %></p>
              </div>
            </a>
          </div>
        <% end %>
      </div>

    </div>
  </div> 

</div>



<!-- モーダルウィンドウの中身 -->
<div class="modal fade" id="editModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">神絵師情報の編集</h4>
      </div>
      <div class="modal-body">
        <form method="POST" action="/changeusersettings" >
          <div class="form-group">
             <label>KMC-ID</label>
             <input value="<%= @user.kmcid %>" name="kmcid" type="text" class="form-control"  readonly >
          </div>
          <div class="form-group">
             <label>表示名</label>
             <input value="<%= @user.name %>" name="name" type="text" class="form-control"  required>
          </div>
          <div class="form-group">
             <button type="submit" class="btn btn-primary form-control" >更新</button>
          </div>

        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
       </div>
    </div>
  </div>
</div>
