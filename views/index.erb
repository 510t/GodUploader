<div class="container">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="text-center">最新<%= @newerillusts.count.to_s %>件の絵</h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <% @newerillusts.order( "created_at DESC" ).each do |i| %>
          <div class="col-md-3">
              <a href="<%= uri("./illust/"+i.id.to_s ,false) %>" class="thumbnail" style="height:<%= thumbheight %>;">
                <% if ishide(i) then %>
                  検閲によりサムネイル表示なし
                <% else %>
                  <img style="width:auto;height:50%;"  src="<%= uri( "./illusts/" + i.filename , false ) %>"  >
                <% end %>
              <div class="caption" style="width:auto;height:20%">
                <h3><%= i.title  %></h3>
                <p><%= i.account.name %></p>
                <p><%= i.caption %></p>
              </div>
            </a>
          </div>
        <% end %>
       </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="text-center">利用者達</h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <% @accounts.each do |a| %>
            <div class="col-md-3">
              <a href="<%= uri( 'users/' + a.kmcid ,false ) %>" type="button" class="btn btn-default center-block" ><%= a.name %>(<%=a.illusts.count%>)</a>
            </div>
          <% end %>
        </div>
       </div>
    </div>
  </div>

</div>
